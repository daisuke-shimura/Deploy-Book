<h1>プロフィール編集</h1>

<% if @user.errors.any? %>
  <p><%= @user.errors.count %>件のエラーが発生しました。</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label>プロフィール画像</label>
    <%= f.file_field :image, placeholder: "プロフィール画像", acxept: "image/*" %>
  <label>名前</label>
    <%= f.text_field :name %>
  <label>紹介文</label>
    <%= f.text_field :introduction %>

  <%= f.submit "変更" %>
  <%= link_to "キャンセル", books_path %>
<% end %>
