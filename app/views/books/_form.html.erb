<h1>新規投稿</h1>

<% if book.errors.any? %>
  <h3><%= book.errors.count %>件のエラーが発生しました。</h3>
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: book do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_field :body %>

  <%= f.submit "投稿" %>
<% end %>
